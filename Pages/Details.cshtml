@page "{id:int?}"
@model AgendaContatos.Pages.DetailsModel

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes:</h1>

<div>
    <h4>Contato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pessoa.Nome)
        </dd>
    </dl>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa.Contatos)
            </th>
             <th>
                Acões
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pessoa.Contatos.ToList()) {
            <tr >
                <td class="col-md-8 offset-md-4">
                    @(item.tipo == 1 ? "Email:" : "")
                    @(item.tipo == 0 ? "Telefone:" : "")
                    @(item.tipo == 2 ? "Whatsapp:" : "")
                    @item.valor
            </td>         
            <td>
                <a asp-page="./Edit" asp-route-id="@Model.Pessoa.Contatos" class="btn btn-warning">Editar</a> |                
                <a asp-page="./Delete" asp-route-id="@Model.Pessoa.Contatos" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Pessoa" class="btn btn-primary">Adicionar</a> |
    <a asp-page="./Index" class="btn btn-secondary">Voltar</a>
</div>
