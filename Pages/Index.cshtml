@page "{id:int?}"
@model AgendaContatos.Pages.IndexModel

@{
    ViewData["Title"] = "Agenda de Contatos";
}

<h1>Contatos: </h1>

<p>
    <a  asp-page="Create" class="btn btn-secondary">Novo Contato</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa[0].Nome)
            </th>
             <th>
                Acões
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pessoa) {
        <tr >
            <td class="col-md-8 offset-md-4">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info">Detalhes</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
